<% title "Listing tasks by date" %>
<h1>Listing tasks by due date</h1>

<table>
  <thead>
    <tr>
      <th width="200">Title</th>
      <th width="180">Description</th>
      <th width="150">Priority</th>
      <th width="150">Date Due</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="<%= cycle('row_odd', 'row_even') %>">
        <td><%= task.title %></td>
        <td><%= truncate(strip_tags(task.description), length: 40) %></td>
        <td><%= task.priority.name %></td>
        <td><%= task.date_due && task.date_due.to_s(:due_date)  %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "button radius" %>
