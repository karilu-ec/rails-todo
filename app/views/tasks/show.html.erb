<% title "This task" %>
<% if notice %>
<div class="row">
  <div class="large-12 columns">
    <span id="notice" class="success label"><%= notice %></span>
  </div>
</div>
<% end %>
<div class="row"> 
  <div class="large-12 columns">
    <h2>This Task</h2>
    <p>
      <strong>Title:</strong>
      <%= @task.title %>
    </p>
    
    <p>
      <strong>Description:</strong>
      <%= @task.description %>
    </p>
    
    <p>
      <strong>Priority:</strong>
      <%= @task.priority.name %>
    </p>
</div>
</div>
<%= link_to 'Edit', edit_task_path(@task), class: "button radius" %> <br />
<%= link_to 'Back', tasks_path %>
