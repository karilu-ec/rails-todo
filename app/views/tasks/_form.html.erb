<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation" class="row">
      <div class="large-12 columns">
        <span class="alert label"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</span>
  
        <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><label class="error"><%= msg %></label></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="small-2 columns">
      <%= f.label :title, class: "right inline" %>
    </div>
    <div class="small-10 columns">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row">
    <div class="small-2 columns">
    <%= f.label :description , class: "right inline" %>
    </div>
    <div class="small-10 columns">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="row">
    <div class="small-2 columns">
      <%= f.label :priority_id , class: "right inline" %>
    </div>
    <div class="small-6 columns">
      <%= collection_select(:task, :priority_id, Priority.all, :id, :name, :prompt => true ) %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row">
    <div class="small-2 columns">
      <%= f.label :date_due, class: "right inline" %>
    </div>
    <div class="small-6 columns">
      <%= date_select("task", "date_due", {prompt:true, start_year: Time.now.year}) %>
    </div>
    <div class="small-4 columns"></div>
  </div>
  <div class="row">
    <div class="small-10 small-offset-2 columns">
      <br />
      <%= f.submit %>
    </div>
  </div>
<% end %>
